    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function loadPatientData(id, name) {
            fetch('/Dashboard/GetPatientData', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id: id.toString() })
            })
                .then(res => res.json())
                .then(data => {
                    console.log("Response from C#:", data);
                    let html = "";
                    data.forEach(x => {
                        let formatted = x.date.split('/').reverse().join('');
                        console.log(formatted)
                        html += `
                                                    <div class="col-md-4">
                                                        <div class="card shadow-sm p-3 text-center">
                                                            <h5>${x.date}</h5>
                                                            Peak: ${x.peak} <br/>
                                                            Contact Area: ${x.contactArea} <br/>
                                                            Avg Pressure: ${x.avgPressure}
                                                            <img src="/Patient-Data/Heatmap/${id}_${formatted}.png"
                                                             class="img-fluid rounded mb-2"
                                                             alt="Heatmap for ${x.date}" />
                                                        </div>
                                                    </div>
                                                `;
                    });

                    console.log(html);
                    document.getElementById("metricsContainer").innerHTML = html;
                    document.getElementById("patID").innerHTML = id;
                    document.getElementById("patID").value = id;
                    var modal = new bootstrap.Modal(document.getElementById("patientModal"),
                        {
                            keyboard: true,
                            backdrop: "static"
                        });
                    modal.show();

                });
        }

        function SaveNotes() {
            var PatientId = document.getElementById('patID').value;
            var notes = document.getElementById('noteText').value;           

            console.log("patient"+PatientId)
            fetch('/Dashboard/SaveNote', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id: PatientId,notes:notes })
            })
                .then(res => res.json())
                .then(data => {
                    alert("Record saved successfully!")
                });
        }
    </script>

</body>
